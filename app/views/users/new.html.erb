    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


<div class="new_users">
  <section id="new" class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h1>Crear Cuenta</h1>

          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          

          <%= form_for @user do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "ContraseÃ±a" %>
            </div>

            <div class="form-group">
              <%= f.text_field :name, class: "form-control input-lg", placeholder: "Nombre" %>
            </div>

            <div class="actions">
              <%= f.submit class: "btn btn-primary btn-block btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
  </section>
</div>